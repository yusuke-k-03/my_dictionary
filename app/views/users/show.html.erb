<%= render "shared/header" %>

<div calss = "dictionary">

  <div class = "wrapper">


    <div class = "main-bar">
      <div class = "searchs">
        <div class = "searchs-form">
           私の自引き
           </div>

            <%= form_with(url:  search_dictionaries_path, local: true, method: :get, class: "search-form") do |form| %>
                   <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
                   <%= form.submit "検索", class: "search-btn" %>
                <% end %>
              
      </div>


      <div class = "lists-dictionary">
        <div class = "list-dictionary">
          カテゴリー
        </div>

        <div class = "list-dictionary">
          タイトル
        </div>
      </div>

      <% @dictionaries.each do |dictionary| %>
        <div class = "uppers-dictionary">
          <div class = "upper-dictionary">
            <%= dictionary.category.name %>
          </div>

          <%= link_to dictionary.title, dictionary_path(dictionary.id), class: "upper-dictionary" %>
       </div>
     <% end %>
 
    </div>
    <div class = "question-show">
      <div class = question-title>
        私の質問
      </div>
      <div class = "question-lists">
        <div class = "question-list">
          カテゴリー
        </div>
        <div class = "question-list">
          タイトル
        </div>
        <div class = "question-list">
          コメント有無
        </div>  
      </div>

      <% @questions.each do |question| %>
        <div class = "uppers-dictionary">
          <div class = "upper-dictionary">
            <%= question.category.name %>
          </div>

               <%= link_to question.title, question_path(question.id), class: "upper-dictionary" %>

              
              <div class = "upper-dictionary">
              <%# if answer.question_id == question.id  %>
                 きたよ
              <%# end %>  
              </div>
    
        </div>
     <% end %>


  
    </div>

    <div class = "addition">
      <%= link_to(new_dictionary_path, class: 'purchase-btn') do %>
        <span class='purchase-btn-text'>辞書に追加</span>
        <%= image_tag 'book_fusen_yoko.png' , size: '0x150' ,class: "purchase-btn-icon" %>
      <% end %>
    </div>
   </div>

 </div>
</div>